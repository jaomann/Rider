@using project_rider.Models.Auth.Register
@model RegisterUser

@{
    IEnumerable<string> erros = new List<string>();
    if (ViewBag.Erros != null)
    {
        erros = (IEnumerable<string>)ViewBag.Erros;
    }
}

<style>
    .container-fluid {
        background-color: #121314;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="container-fluid rounded-lg">
    <div class="form-container">
        <h2 class="text-center">Bem vindo ao Rider</h2>
        <form method="post" asp-action="Register">
            <div class="form-group">
                @Html.DisplayFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new{@class="form-control mt-2", type="text", placeholder="Nome:"})
            </div>
            <div class="form-group">
                @Html.DisplayFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new{@class="form-control mt-2", type="text", placeholder="Email"})
            </div>
            <div class="form-group">
                @Html.DisplayFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new{@class="form-control mt-2", placeholder="Senha"})
            </div>
            <div class="form-group text-end">
                <p>Sou motorista!</p>
                @Html.CheckBoxFor(x => x.RoleCheck)
            </div>
            <div class="row">
                @if (erros.Any())
                {
                    foreach(var erro in erros)
                    {
                        <p class="text-danger w-bold">@erro</p><br />
                    }
                }
            </div>
            <button type="submit" class="btn btn-success btn-block mt-2">Registrar</button>
        </form>
    </div>
</div>
