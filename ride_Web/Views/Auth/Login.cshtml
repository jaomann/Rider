@using project_rider.Models.Auth.Login
@model LoginUser

@{
    IEnumerable<string> erros = new List<string>();
    if (ViewBag.Erros != null)
    {
        erros = (IEnumerable<string>)ViewBag.Erros;
    }
}

<style>
    .container-fluid {
        background-color: #121314;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="container-fluid rounded-lg">
    <div class="form-container">
        <h2 class="text-center">Rider</h2>
        <form method="post" asp-action="Login">
            <div class="form-group">
                @Html.DisplayFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new{@class="form-control mt-2", placeholder="Nome de usuário"})
            </div>
            <div class="form-group">
                @Html.DisplayFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new{@class="form-control mt-2", placeholder="Senha"})
            </div>
            <button type="submit" class="btn btn-success btn-block mt-2">Login</button>
        </form>
        <div class="row m-3">
            <a class="btn btn-primary" asp-action="Register">Ainda não tenho conta</a>
        </div>
    </div>
</div>
